<div class="container mt-5">

  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @deceased %>
  </div>

  <div class="mt-4 d-flex align-items-center">
    <%= link_to "Edit this deceased", edit_deceased_path(@deceased), class: "btn btn-warning me-3" %>
    <span class="me-3">|</span>
    <%= link_to "Back to deceaseds", deceaseds_path, class: "btn btn-secondary me-3" %>
    <%= button_to "Destroy this deceased", @deceased, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
  </div>

</div>
