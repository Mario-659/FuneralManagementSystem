<div class="container mt-5">

  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @funeral_service %>
  </div>

  <div class="mt-4 d-flex align-items-center">
    <%= link_to "Edit this funeral service", edit_funeral_service_path(@funeral_service), class: "btn btn-warning me-3" %>
    <span class="me-3">|</span>
    <%= link_to "Back to funeral services", funeral_services_path, class: "btn btn-secondary me-3" %>
    <%= button_to "Destroy this funeral service", @funeral_service, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
  </div>

</div>
