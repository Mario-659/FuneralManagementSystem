<div class="container mt-5">

  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= render @user %>
  </div>

  <div class="mt-4 d-flex align-items-center">
    <%= link_to "Edit this user", edit_user_path(@user), class: "btn button-warning me-3" %>
    <span class="me-3">|</span>
    <%= link_to "Back to users", users_path, class: "btn button-secondary me-3" %>
    <%= button_to "Destroy this user", @user, method: :delete, class: "btn button-danger", data: { confirm: 'Are you sure?' } %>
  </div>

</div>
